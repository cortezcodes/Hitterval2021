<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/colorGradientStartGray"
                android:endColor="@color/colorGradientEndGray"/>
            <padding
                android:top="@dimen/timerButtonPadding"
                android:bottom="@dimen/timerButtonPadding"
                android:left="@dimen/timerButtonPadding"
                android:right="@dimen/timerButtonPadding"/>
            <stroke
                android:width="5dp"
                android:color="@color/colorBorder"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/colorGradientEndGray"
                android:endColor="@color/colorGradientStartGray"/>
            <padding
                android:top="@dimen/timerButtonPadding"
                android:bottom="@dimen/timerButtonPadding"
                android:left="@dimen/timerButtonPadding"
                android:right="@dimen/timerButtonPadding"/>
            <stroke
                android:width="5dp"
                android:color="@color/colorBorder"/>
        </shape>
    </item>
</selector>