<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/colorSaveButton"/>
            <padding
                android:top="@dimen/timerButtonPadding"
                android:bottom="@dimen/timerButtonPadding"
                android:left="@dimen/timerButtonPadding"
                android:right="@dimen/timerButtonPadding"/>
            <stroke
                android:width="4dp"
                android:color="@color/colorBorder"/>
            <corners
                android:radius="75dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/colorSaveButtonPressed"/>
            <padding
                android:top="@dimen/timerButtonPadding"
                android:bottom="@dimen/timerButtonPadding"
                android:left="@dimen/timerButtonPadding"
                android:right="@dimen/timerButtonPadding"/>
            <stroke
                android:width="4dp"
                android:color="@color/colorBorder"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
</selector>